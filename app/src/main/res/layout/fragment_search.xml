<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"
    android:background="@color/background_white"
    tools:context=".presentation.ui.home.search.SearchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@id/guideline_center_cardview"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@color/transparant_color"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/white"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_search_flight"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/btn_back"
            app:layout_constraintBottom_toBottomOf="@id/btn_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_back">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ic_takeoff"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_takeoff"
                    app:tint="@color/gray"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_from"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:text="@string/text_departure"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/ic_takeoff"
                    app:layout_constraintEnd_toStartOf="@+id/btn_switch_flight"
                    app:layout_constraintStart_toEndOf="@id/ic_takeoff"
                    app:layout_constraintTop_toTopOf="@id/ic_takeoff" />

                <View
                    android:id="@+id/guideline_one"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"

                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/ic_takeoff"
                    app:layout_constraintStart_toStartOf="@id/ic_takeoff"/>

                <ImageView
                    android:id="@+id/ic_land"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_land"
                    app:tint="@color/gray"

                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_one"
                    app:layout_constraintTop_toBottomOf="@id/guideline_one"/>

                <TextView
                    android:id="@+id/tv_destination"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:text="@string/text_arrival"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/ic_land"
                    app:layout_constraintEnd_toStartOf="@+id/btn_switch_flight"
                    app:layout_constraintStart_toEndOf="@id/ic_land"
                    app:layout_constraintTop_toTopOf="@id/ic_land" />

                <ImageButton
                    android:id="@+id/btn_switch_flight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_icon"
                    android:src="@drawable/ic_change_arrow"
                    app:tint="@color/text_blue"
                    android:padding="6dp"
                    android:rotation="90"
                    app:layout_constraintTop_toTopOf="@id/guideline_one"
                    app:layout_constraintBottom_toBottomOf="@id/guideline_one"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/guideline_center_cardview"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="@id/cardview_one"
            app:layout_constraintEnd_toEndOf="@id/cardview_one"
            app:layout_constraintTop_toTopOf="@id/cardview_one"
            app:layout_constraintBottom_toBottomOf="@id/cardview_one"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview_one">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <LinearLayout
                    android:id="@+id/ll_date_departure"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/text_roundtrip"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_departure_date"
                        app:tint="@color/gray" />

                    <TextView
                        android:id="@+id/tv_date_departure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="@string/text_date"
                        android:textSize="16sp" />

                </LinearLayout>

                <View
                    android:id="@+id/guideline_two"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="8dp"
                    app:layout_constraintTop_toBottomOf="@id/ll_date_departure"
                    app:layout_constraintStart_toStartOf="@id/ll_date_departure"/>

                <LinearLayout
                    android:id="@+id/ll_date_return"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/text_roundtrip"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/guideline_two">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_return_date"
                        app:tint="@color/gray" />

                    <TextView
                        android:id="@+id/tv_date_return"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:text="@string/text_date"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_roundtrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_roundtrip"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"
                    app:layout_constraintTop_toTopOf="@id/switch_roundtrip"
                    app:layout_constraintBottom_toBottomOf="@id/switch_roundtrip"
                    app:layout_constraintEnd_toStartOf="@id/switch_roundtrip"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_roundtrip"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    app:thumbTint="@color/dark_blue"
                    app:trackTint="@color/background_blue"
                    android:checked="true"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="@id/ll_date_departure"
                    app:layout_constraintBottom_toBottomOf="@id/ll_date_departure"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview_two">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ic_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_person"
                    app:tint="@color/gray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/text_passenger"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/ic_person"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ic_person"
                    app:layout_constraintTop_toTopOf="@id/ic_person" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btn_search"
            style="@style/Widget.Custom.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_search"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/cardview_three"
            app:layout_constraintEnd_toEndOf="@id/cardview_three"
            app:layout_constraintTop_toBottomOf="@id/cardview_three"/>

        <TextView
            android:id="@+id/text_favdestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_promotion"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/btn_search"
            app:layout_constraintStart_toStartOf="@id/btn_search"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_viewall"
            android:textColor="@color/dark_blue"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/text_favdestination"
            app:layout_constraintBottom_toBottomOf="@id/text_favdestination"
            app:layout_constraintEnd_toEndOf="@id/cardview_one"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_favdestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_favorite_destination"
            tools:itemCount="3"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/text_favdestination"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>