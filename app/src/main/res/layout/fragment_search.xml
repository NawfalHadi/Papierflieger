<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_white"
    tools:context=".presentation.ui.home.search.SearchFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?attr/colorPrimary"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideline_center_cardview"/>


        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back_arrow"
            android:src="@drawable/ic_back_arrow"

            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/text_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Your Flight"
            android:textSize="20sp"
            android:textColor="@color/white"

            app:layout_constraintTop_toTopOf="@id/btn_back"
            app:layout_constraintBottom_toBottomOf="@id/btn_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"

            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_search">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="16dp">

                <ImageView
                    android:id="@+id/ic_takeoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_takeoff"
                    app:tint="@color/gray"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bali-Denpasar (DPS)"
                    android:textSize="16sp"
                    android:textColor="@color/text_blue"

                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/ic_takeoff"
                    app:layout_constraintTop_toTopOf="@id/ic_takeoff"
                    app:layout_constraintBottom_toBottomOf="@id/ic_takeoff"/>

                <View
                    android:id="@+id/guideline_one"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"

                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/ic_takeoff"
                    app:layout_constraintStart_toStartOf="@id/ic_takeoff"/>

                <ImageView
                    android:id="@+id/ic_land"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_land"
                    app:tint="@color/gray"

                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_one"
                    app:layout_constraintTop_toBottomOf="@id/guideline_one"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surabaya (SUB)"
                    android:textSize="16sp"
                    android:textColor="@color/text_blue"

                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/ic_land"
                    app:layout_constraintTop_toTopOf="@id/ic_land"
                    app:layout_constraintBottom_toBottomOf="@id/ic_land"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/background_blue"
                    android:src="@drawable/ic_change_arrow"
                    app:tint="@color/text_blue"

                    android:padding="3dp"
                    android:rotation="90"
                    app:layout_constraintTop_toTopOf="@id/guideline_one"
                    app:layout_constraintBottom_toBottomOf="@id/guideline_one"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/guideline_center_cardview"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="@id/cardview_one"
            app:layout_constraintEnd_toEndOf="@id/cardview_one"
            app:layout_constraintTop_toTopOf="@id/cardview_one"
            app:layout_constraintBottom_toBottomOf="@id/cardview_one"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"

            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview_one">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="16dp">

                <ImageView
                    android:id="@+id/ic_date_go"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_departure_date"
                    app:tint="@color/gray"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Sat, 19 Nov 2022"
                    android:textSize="16sp"
                    android:textColor="@color/text_blue"

                    android:layout_marginStart="16dp"
                    app:layout_constraintEnd_toStartOf="@id/text_roundtrip"
                    app:layout_constraintStart_toEndOf="@id/ic_date_go"
                    app:layout_constraintTop_toTopOf="@id/ic_date_go"
                    app:layout_constraintBottom_toBottomOf="@id/ic_date_go"/>

                <View
                    android:id="@+id/guideline_two"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"

                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/ic_date_go"
                    app:layout_constraintStart_toStartOf="@id/ic_date_go"/>

                <ImageView
                    android:id="@+id/ic_date_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_return_date"
                    app:tint="@color/gray"

                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_two"
                    app:layout_constraintTop_toBottomOf="@id/guideline_two"/>

                <TextView
                    android:id="@+id/tv_return_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mon, 21 Nov 2022"
                    android:textSize="16sp"
                    android:textColor="@color/text_blue"

                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/ic_date_back"
                    app:layout_constraintTop_toTopOf="@id/ic_date_back"
                    app:layout_constraintBottom_toBottomOf="@id/ic_date_back"/>

                <TextView
                    android:id="@+id/text_roundtrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_roundtrip"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"

                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toTopOf="@id/switch_roundtrip"
                    app:layout_constraintBottom_toBottomOf="@id/switch_roundtrip"
                    app:layout_constraintEnd_toStartOf="@id/switch_roundtrip"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_roundtrip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:thumbTint="@color/dark_blue"
                    android:checked="true"

                    app:layout_constraintTop_toTopOf="@id/ic_date_go"
                    app:layout_constraintBottom_toBottomOf="@id/ic_date_go"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"

            android:layout_marginTop="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardview_two">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="16dp">

                <ImageView
                    android:id="@+id/ic_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_person"
                    app:tint="@color/gray"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Adult, 1 Child, 1 Baby"
                    android:textSize="16sp"
                    android:textColor="@color/text_blue"
                    android:textStyle="bold"

                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@id/ic_person"
                    app:layout_constraintBottom_toBottomOf="@id/ic_person"
                    app:layout_constraintStart_toEndOf="@id/ic_person"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="@color/white"
            android:background="@drawable/background_button"
            app:backgroundTint="@color/dark_blue"

            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@id/cardview_three"
            app:layout_constraintEnd_toEndOf="@id/cardview_three"
            app:layout_constraintTop_toBottomOf="@id/cardview_three"/>

        <TextView
            android:id="@+id/text_favdestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite Destination"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_blue"

            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/btn_search"
            app:layout_constraintStart_toStartOf="@id/btn_search"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_viewall"
            android:textColor="@color/dark_blue"

            app:layout_constraintTop_toTopOf="@id/text_favdestination"
            app:layout_constraintBottom_toBottomOf="@id/text_favdestination"
            app:layout_constraintEnd_toEndOf="@id/cardview_one"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_favdestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_favorite_destination"
            tools:itemCount="3"

            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_favdestination"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>