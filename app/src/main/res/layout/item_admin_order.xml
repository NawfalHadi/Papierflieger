<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ContentDescription">

    <View
        android:id="@+id/v_gap"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_ticket"
        style="@style/Widget.Custom.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/v_gap">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp">

            <View
                android:id="@+id/v_middle"
                android:layout_width="1dp"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_passenger_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/text_passenger_name"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_passenger_name_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:text="@string/text_passenger_name"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_nationality_value"
                app:layout_constraintStart_toStartOf="@+id/tv_passenger_name"
                app:layout_constraintTop_toBottomOf="@+id/tv_passenger_name" />

            <TextView
                android:id="@+id/tv_date_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/text_date_birth"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_identity_value" />

            <TextView
                android:id="@+id/tv_date_birth_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:maxLines="1"
                android:text="@string/text_date_birth"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/v_middle"
                app:layout_constraintStart_toStartOf="@+id/tv_date_birth"
                app:layout_constraintTop_toBottomOf="@+id/tv_date_birth" />

            <TextView
                android:id="@+id/tv_expiration_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/text_expiration_date"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_date_birth"
                app:layout_constraintTop_toBottomOf="@+id/tv_passport_number_value" />

            <TextView
                android:id="@+id/tv_expiration_date_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:maxLines="1"
                android:text="@string/text_expiration_date"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/v_middle"
                app:layout_constraintStart_toStartOf="@+id/tv_date_birth"
                app:layout_constraintTop_toBottomOf="@+id/tv_expiration_date" />

            <TextView
                android:id="@+id/tv_passport_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/text_passport"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_date_birth"
                app:layout_constraintTop_toBottomOf="@+id/tv_date_birth_value" />

            <TextView
                android:id="@+id/tv_passport_number_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:text="@string/text_passport"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_nationality_value"
                app:layout_constraintStart_toStartOf="@+id/tv_date_birth"
                app:layout_constraintTop_toBottomOf="@+id/tv_passport_number" />
            
            <TextView
                android:id="@+id/tv_identity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/text_identity"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_date_birth"
                app:layout_constraintTop_toBottomOf="@+id/tv_passenger_name_value" />

            <TextView
                android:id="@+id/tv_identity_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:text="@string/text_identity"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_nationality_value"
                app:layout_constraintStart_toStartOf="@+id/tv_date_birth"
                app:layout_constraintTop_toBottomOf="@+id/tv_identity" />

            <TextView
                android:id="@+id/tv_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/text_ticket"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_date_birth"
                app:layout_constraintTop_toBottomOf="@+id/tv_expiration_date_value" />

            <TextView
                android:id="@+id/tv_ticket_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="4dp"
                android:maxLines="1"
                android:text="@string/text_ticket"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/v_middle"
                app:layout_constraintStart_toStartOf="@+id/tv_date_birth"
                app:layout_constraintTop_toBottomOf="@+id/tv_ticket" />

            <TextView
                android:id="@+id/tv_nationality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_nationality"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/v_middle"
                app:layout_constraintTop_toTopOf="@+id/tv_date_birth" />

            <TextView
                android:id="@+id/tv_nationality_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:maxLines="1"
                android:text="@string/text_nationality"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_nationality"
                app:layout_constraintTop_toBottomOf="@+id/tv_nationality" />

            <TextView
                android:id="@+id/tv_issuing_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/text_issuing_country"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/v_middle"
                app:layout_constraintTop_toBottomOf="@+id/tv_passport_number_value" />

            <TextView
                android:id="@+id/tv_issuing_country_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:text="@string/text_issuing_country"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_nationality_value"
                app:layout_constraintStart_toStartOf="@+id/tv_nationality"
                app:layout_constraintTop_toBottomOf="@+id/tv_issuing_country" />

            <View
                android:id="@+id/v_gap_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/border_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_ticket_value" />

            <Button
                android:id="@+id/btn_delete"
                style="@style/Widget.Custom.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                app:backgroundTint="@color/background_red"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/text_red"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_gap_1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/cv_ticket" />

</androidx.constraintlayout.widget.ConstraintLayout>