<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ContentDescription, SmallSp"
    style="@style/Widget.Custom.CardView"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ic_airplane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_airplane"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/dark_blue" />

        <TextView
            android:id="@+id/tv_departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/text_departure"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/ic_airplane"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ic_change_arrow"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/ic_arrow_destination"
            app:layout_constraintBottom_toBottomOf="@+id/tv_departure"
            app:layout_constraintStart_toEndOf="@id/tv_departure"
            app:layout_constraintTop_toTopOf="@+id/tv_departure"
            app:tint="@color/text_blue" />

        <TextView
            android:id="@+id/tv_arrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/text_arrival"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_departure"
            app:layout_constraintStart_toEndOf="@id/ic_change_arrow"
            app:layout_constraintTop_toTopOf="@+id/tv_departure" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_date"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_departure" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/transparant_color"
            android:src="@drawable/ic_keyboard_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/dark_blue" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>