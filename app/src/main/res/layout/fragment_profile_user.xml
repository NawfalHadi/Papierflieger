<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"
    android:background="@color/background_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?attr/colorPrimary"
            app:layout_constraintBottom_toTopOf="@+id/guideline_center_cardview"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/text_profile"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profile">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <View
                    android:id="@+id/guideline_center_cardview_2"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_person_circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/dark_blue" />

                <TextView
                    android:id="@+id/tv_full_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/text_fullname"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/guideline_center_cardview_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_profile"
                    app:layout_constraintTop_toTopOf="@+id/iv_profile" />

                <TextView
                    android:id="@+id/tv_signin_with"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/text_signin_with"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_profile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_full_name"
                    app:layout_constraintTop_toTopOf="@+id/guideline_center_cardview_2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/guideline_center_cardview"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="@id/cv_profile"
            app:layout_constraintEnd_toEndOf="@id/cv_profile"
            app:layout_constraintTop_toTopOf="@id/cv_profile"
            app:layout_constraintBottom_toBottomOf="@id/cv_profile"/>

        <TextView
            android:id="@+id/text_account_security"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_account"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/cv_profile"
            app:layout_constraintTop_toBottomOf="@+id/cv_profile" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_account_security"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:listitem="@layout/item_profile_account"
            tools:itemCount="2"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/text_account_security"/>

        <TextView
            android:id="@+id/text_preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/text_preference"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/cv_profile"
            app:layout_constraintTop_toBottomOf="@+id/rv_account_security" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_preference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:listitem="@layout/item_profile_preference"
            tools:itemCount="3"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/text_preference"/>

        <TextView
            android:id="@+id/text_application"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/text_application"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/cv_profile"
            app:layout_constraintTop_toBottomOf="@+id/rv_preference" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_application"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:listitem="@layout/item_profile_account"
            tools:itemCount="1"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/text_application"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>