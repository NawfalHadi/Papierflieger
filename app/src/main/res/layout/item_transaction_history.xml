<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Custom.CardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ContentDescription"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="4dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_ordernumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_ordernumber"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/ic_airplane"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_airplane"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ordernumber"
            app:tint="@color/gray" />

        <TextView
            android:id="@+id/tv_from_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_departure"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/ic_airplane"
            app:layout_constraintTop_toTopOf="@id/ic_airplane"
            app:layout_constraintBottom_toBottomOf="@id/ic_airplane"/>

        <TextView
            android:id="@+id/tv_destination_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/text_arrival"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_from_location"
            app:layout_constraintStart_toEndOf="@id/ic_change_arrow"
            app:layout_constraintTop_toTopOf="@+id/tv_from_location" />

        <ImageView
            android:id="@+id/ic_change_arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/ic_change_arrow"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/ic_airplane"
            app:layout_constraintStart_toEndOf="@id/tv_from_location"
            app:layout_constraintTop_toTopOf="@+id/ic_airplane" />

        <ImageView
            android:id="@+id/ic_direct"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:visibility="gone"
            android:src="@drawable/ic_arrow_destination"
            app:layout_constraintBottom_toBottomOf="@+id/ic_change_arrow"
            app:layout_constraintEnd_toEndOf="@+id/ic_change_arrow"
            app:layout_constraintStart_toStartOf="@+id/ic_change_arrow"
            app:layout_constraintTop_toTopOf="@+id/ic_change_arrow" />

        <View
            android:id="@+id/guideline_one"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@color/border_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ic_airplane" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Custom.CardView.Transaction.Success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_one">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_transaction_success"
                android:textColor="@color/text_green"
                android:textSize="12sp" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>