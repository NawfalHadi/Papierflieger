<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:context=".presentation.ui.home.history.DetailHistoryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_header"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:background="?attr/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_ordernumber"/>

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparant_color"
            android:src="@drawable/ic_back_arrow"

            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_fromlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balikpapan (BPP)"
            android:textColor="@color/white"
            android:textSize="12sp"

            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="@id/btn_back" />

        <TextView
            android:id="@+id/tv_destinationlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jakarta (JKT)"
            android:textColor="@color/white"
            android:textSize="12sp"

            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/ic_change_arrow"
            app:layout_constraintTop_toTopOf="@id/btn_back" />

        <TextView
            android:id="@+id/tv_ordernumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_ordernumber"
            android:textColor="@color/white"
            android:textSize="8sp"

            android:paddingBottom="8dp"
            app:layout_constraintStart_toStartOf="@id/tv_fromlocation"
            app:layout_constraintTop_toBottomOf="@id/tv_fromlocation"/>

        <ImageView
            android:id="@+id/ic_change_arrow"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_change_arrow"
            app:tint="@color/white"

            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/tv_fromlocation"
            app:layout_constraintTop_toTopOf="@id/tv_fromlocation"
            app:layout_constraintBottom_toBottomOf="@id/tv_fromlocation"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            android:background="@color/background_green"
            app:tint="@color/text_green"

            android:elevation="2dp"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="@id/cardview_one"
            app:layout_constraintBottom_toTopOf="@id/cardview_one"
            app:layout_constraintStart_toStartOf="@id/cardview_one"
            app:layout_constraintEnd_toEndOf="@id/cardview_one"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            app:layout_constraintTop_toBottomOf="@id/view_header">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/text_transactionsucces"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction Successful"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_blue"

                    android:paddingTop="28dp"
                    android:paddingBottom="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/text_purchasetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_purchase_time"
                    android:textSize="12sp"

                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_transactionsucces"/>

                <TextView
                    android:id="@+id/text_paymentmethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_payment_method"
                    android:textSize="12sp"

                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/text_purchasetime"
                    app:layout_constraintStart_toStartOf="@id/text_purchasetime"/>

                <TextView
                    android:id="@+id/text_pricingdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_pricing_detail"
                    android:textSize="12sp"

                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/text_paymentmethod"
                    app:layout_constraintStart_toStartOf="@id/text_paymentmethod"/>

                <View
                    android:id="@+id/guideline_one"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/border_white"

                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/text_pricingdetail"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_pricingdetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_pricing_details_text"

                    android:layout_marginTop="8dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintStart_toStartOf="@id/text_pricingdetail"
                    app:layout_constraintTop_toBottomOf="@id/guideline_one"/>

                <TextView
                    android:id="@+id/text_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_payment"
                    android:textColor="@color/text_blue"

                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/rv_pricingdetail"
                    app:layout_constraintStart_toStartOf="@id/text_pricingdetail"/>

                <TextView
                    android:id="@+id/tv_purchasetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sat, 19 Nov 2022"
                    android:textSize="12sp"

                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="@id/text_purchasetime"
                    app:layout_constraintBottom_toBottomOf="@id/text_purchasetime"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_paymentmethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank Transfer"
                    android:textSize="12sp"

                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="@id/text_paymentmethod"
                    app:layout_constraintBottom_toBottomOf="@id/text_paymentmethod"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_pricingdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank Transfer"
                    android:textSize="12sp"
                    android:textColor="@color/text_blue"

                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@id/ic_keyboard_arrow"
                    app:layout_constraintTop_toTopOf="@id/text_pricingdetail"
                    app:layout_constraintBottom_toBottomOf="@id/text_pricingdetail"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <ImageButton
                    android:id="@+id/ic_keyboard_arrow"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/ic_keyboard_arrow"
                    android:background="@color/transparant_color"
                    app:tint="?attr/colorPrimary"

                    android:rotation="180"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="@id/text_pricingdetail"
                    app:layout_constraintBottom_toBottomOf="@id/text_pricingdetail"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-IDR 780.000"
                    android:textSize="12sp"
                    android:textColor="@color/text_green"

                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="@id/text_payment"
                    app:layout_constraintBottom_toBottomOf="@id/text_payment"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/text_detailtransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Transaction"
            android:textColor="@color/text_blue"

            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cardview_one"
            app:layout_constraintStart_toStartOf="@id/cardview_one"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_list_detailtransaction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_pricing_detail_transaction"
            tools:itemCount="2"

            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/text_detailtransaction"
            app:layout_constraintStart_toStartOf="@id/cardview_one"
            app:layout_constraintEnd_toEndOf="@id/cardview_one"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>