<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="LabelFor"
    android:background="@color/background_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/v_bg"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/sidebar_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_ticket"
            android:textColor="@color/white"
            android:layout_marginStart="24dp"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/v_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_back"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_clear"
            app:iconSize="24dp"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/v_bg"
            app:layout_constraintEnd_toEndOf="@+id/v_bg"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_departure_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_departure_date"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_bg"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_et_departure_date"
            style="@style/Widget.Custom.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_date_range"
            app:endIconTint="@color/gray_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_departure_date">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_departure_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_departure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_departure_time"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_et_departure_date"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_et_departure_time"
            style="@style/Widget.Custom.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_access_time"
            app:endIconTint="@color/gray_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_departure_time">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_departure_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_flight_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_flight_from"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_et_departure_time"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_et_flight_from"
            style="@style/Widget.Custom.TextInputLayout.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_flight_from">

            <AutoCompleteTextView
                android:id="@+id/ac_flight_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_arrival_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_arrival_date"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_et_flight_from"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_et_arrival_date"
            style="@style/Widget.Custom.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_date_range"
            app:endIconTint="@color/gray_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_arrival_date">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_arrival_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_arrival_time"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_et_arrival_date"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_et_arrival_time"
            style="@style/Widget.Custom.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_access_time"
            app:endIconTint="@color/gray_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_arrival_time">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_arrival_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_flight_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_flight_to"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_et_arrival_time"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_et_flight_to"
            style="@style/Widget.Custom.TextInputLayout.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_flight_to">

            <AutoCompleteTextView
                android:id="@+id/ac_flight_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/text_transit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/text_transit"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/switch_transit"
            app:layout_constraintEnd_toStartOf="@+id/switch_transit"
            app:layout_constraintTop_toTopOf="@+id/switch_transit" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_transit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:checked="false"
            app:layout_constraintEnd_toEndOf="@+id/til_et_flight_to"
            app:layout_constraintTop_toBottomOf="@+id/til_et_flight_to"
            app:thumbTint="@color/dark_blue"
            app:trackTint="@color/background_blue" />

        <Button
            android:id="@+id/btn_next"
            style="@style/Widget.Custom.Button.Mini"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            android:text="@string/text_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_transit" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>