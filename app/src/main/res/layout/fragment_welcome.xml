<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:ignore="ContentDescription"
    tools:context=".presentation.ui.WelcomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/background"/>

        <View
            android:id="@+id/guideline_center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/text_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fly Like a Bird"
            android:textSize="32sp"

            android:textColor="@color/white"
            android:textStyle="bold"

            android:layout_marginTop="112dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline_center"/>
        
        <TextView
            android:id="@+id/text_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_subtitle"
            android:textSize="16sp"
            android:textAlignment="center"

            android:textColor="@color/white"

            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="@id/text_first"
            app:layout_constraintEnd_toEndOf="@id/text_first"
            app:layout_constraintTop_toBottomOf="@id/text_first"/>

        <Button
            android:id="@+id/btn_getstarted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:layout_marginTop="48dp"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:background="@drawable/background_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_second"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>