<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:ignore="ContentDescription, SmallSp">

    <View
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@color/transparant_color"
        android:src="@drawable/ic_back_arrow"
        android:layout_marginStart="24dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/tv_departure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_departure"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintTop_toTopOf="@id/btn_back" />

    <ImageView
        android:id="@+id/ic_change_arrow"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_arrow_destination"
        app:tint="@color/white"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toEndOf="@id/tv_departure"
        app:layout_constraintTop_toTopOf="@id/tv_departure"
        app:layout_constraintBottom_toBottomOf="@id/tv_departure"/>

    <TextView
        android:id="@+id/tv_arrival"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/text_arrival"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_departure"
        app:layout_constraintStart_toEndOf="@id/ic_change_arrow"
        app:layout_constraintTop_toTopOf="@+id/tv_departure" />

    <TextView
        android:id="@+id/tv_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_date"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintStart_toStartOf="@id/tv_departure"
        app:layout_constraintTop_toBottomOf="@id/tv_departure" />

    <ImageView
        android:id="@+id/iv_circle_dot_1"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/ic_circle"
        app:tint="@color/white"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_order_date"
        app:layout_constraintStart_toEndOf="@+id/tv_order_date"
        app:layout_constraintTop_toTopOf="@+id/tv_order_date" />

    <TextView
        android:id="@+id/tv_passenger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_passenger"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_order_date"
        app:layout_constraintStart_toEndOf="@+id/iv_circle_dot_1"
        app:layout_constraintTop_toTopOf="@+id/tv_order_date" />

    <ImageView
        android:id="@+id/iv_circle_dot_2"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:src="@drawable/ic_circle"
        app:tint="@color/white"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_order_date"
        app:layout_constraintStart_toEndOf="@+id/tv_passenger"
        app:layout_constraintTop_toTopOf="@+id/tv_order_date" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_category_seat"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_order_date"
        app:layout_constraintStart_toEndOf="@+id/iv_circle_dot_2"
        app:layout_constraintTop_toTopOf="@+id/tv_order_date" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_order_origin"
        style="@style/Widget.Custom.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/view_header">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingTop="14dp"
            android:paddingBottom="18dp">

            <TextView
                android:id="@+id/tv_departure_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_departure"
                android:textColor="@color/dark_blue"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ic_change_arrow_origin"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="1dp"
                android:src="@drawable/ic_arrow_destination"
                app:layout_constraintBottom_toBottomOf="@+id/tv_departure_origin"
                app:layout_constraintStart_toEndOf="@+id/tv_departure_origin"
                app:layout_constraintTop_toTopOf="@+id/tv_departure_origin"
                app:tint="@color/dark_blue" />

            <TextView
                android:id="@+id/tv_arrival_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_arrival"
                android:textColor="@color/dark_blue"
                android:textSize="10sp"
                android:layout_marginStart="1dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_departure_origin"
                app:layout_constraintStart_toEndOf="@+id/ic_change_arrow_origin"
                app:layout_constraintTop_toTopOf="@+id/tv_departure_origin" />

            <ImageView
                android:id="@+id/ic_logo"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_logo"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_date_origin"
                app:tint="@color/main_blue" />

            <TextView
                android:id="@+id/tv_plane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@+id/ic_logo"
                app:layout_constraintStart_toEndOf="@+id/ic_logo" />

            <ImageView
                android:id="@+id/iv_circle_dot_4"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:src="@drawable/ic_circle"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/ic_logo"
                app:layout_constraintStart_toEndOf="@+id/tv_plane"
                app:layout_constraintTop_toTopOf="@+id/ic_logo"
                app:tint="@color/text_blue" />

            <TextView
                android:id="@+id/tv_date_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_date"
                android:textColor="@color/gray"
                android:layout_marginTop="4dp"
                android:textSize="10sp"
                app:layout_constraintStart_toStartOf="@+id/tv_departure_origin"
                app:layout_constraintTop_toBottomOf="@+id/tv_departure_origin" />

            <ImageView
                android:id="@+id/iv_circle_dot_3"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:src="@drawable/ic_circle"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_date_origin"
                app:layout_constraintStart_toEndOf="@+id/tv_date_origin"
                app:layout_constraintTop_toTopOf="@+id/tv_date_origin"
                app:tint="@color/gray" />

            <TextView
                android:id="@+id/tv_time_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_time"
                android:textColor="@color/gray"
                android:textSize="10sp"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_date_origin"
                app:layout_constraintStart_toEndOf="@+id/iv_circle_dot_3"
                app:layout_constraintTop_toTopOf="@+id/tv_date_origin" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/text_price"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ic_logo"
                app:layout_constraintStart_toEndOf="@+id/iv_circle_dot_4"
                app:layout_constraintTop_toTopOf="@+id/ic_logo" />

            <TextView
                android:id="@+id/tv_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_person"
                android:textColor="@color/gray"
                android:textSize="6sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_price"
                app:layout_constraintStart_toEndOf="@+id/tv_price" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_change"
                style="@style/Widget.Custom.CardView.Change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_change"
                    android:textColor="@color/dark_blue"
                    android:textSize="12sp" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/cv_order_origin"
        tools:listitem="@layout/item_list_flight" />

</androidx.constraintlayout.widget.ConstraintLayout>