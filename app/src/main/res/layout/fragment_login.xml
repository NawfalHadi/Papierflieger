<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:ignore="ContentDescription"
    tools:context=".presentation.ui.auth.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <TextView
            android:id="@+id/text_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to your account"
            android:textSize="32sp"

            android:textColor="@color/text_blue"
            android:textStyle="bold"

            android:layout_marginTop="112dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/title_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_email"
            android:textSize="14sp"

            android:textColor="@color/text_blue"

            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_first"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/title_email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_input_field"
                android:inputType="textEmailAddress"/>

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/title_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_password"
            android:textSize="14sp"

            android:textColor="@color/text_blue"

            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/til_et_email"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/title_password"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_input_field"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Sign In"

            android:layout_marginTop="32dp"
            android:background="@drawable/background_button"
            app:layout_constraintTop_toBottomOf="@id/til_et_password"/>

        <TextView
            android:id="@+id/text_forgotpass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Forgot the Password?"
            android:textAlignment="textEnd"

            android:textColor="@color/text_blue"
            android:textSize="16sp"

            android:layout_marginTop="32dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_signin"
            app:layout_constraintEnd_toStartOf="@id/link_forgotpass"
            />

        <TextView
            android:id="@+id/link_forgotpass"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Reset password"
            android:textAlignment="center"

            android:textColor="@color/dark_blue"
            android:textSize="16sp"

            app:layout_constraintTop_toTopOf="@id/text_forgotpass"
            app:layout_constraintBottom_toBottomOf="@id/text_forgotpass"
            app:layout_constraintStart_toEndOf="@id/text_forgotpass"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/text_third"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or continue with"
            android:textAlignment="center"

            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_forgotpass"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray"

            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/text_third"
            app:layout_constraintBottom_toBottomOf="@id/text_third"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_third" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray"

            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/text_third"
            app:layout_constraintBottom_toBottomOf="@id/text_third"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_third" />

        <ImageButton
            android:id="@+id/btn_signin_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_input_field"
            android:src="@drawable/facebook_logo"

            android:padding="16dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/text_third"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_signin_google"/>

        <ImageButton
            android:id="@+id/btn_signin_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_input_field"
            android:src="@drawable/google_logo"

            android:padding="16dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            app:layout_constraintTop_toTopOf="@id/btn_signin_facebook"
            app:layout_constraintBottom_toBottomOf="@id/btn_signin_facebook"
            app:layout_constraintStart_toEndOf="@id/btn_signin_facebook"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/text_signup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textAlignment="textEnd"

            android:textColor="@color/text_blue"
            android:textSize="16sp"

            android:layout_marginTop="32dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_signin_facebook"
            app:layout_constraintEnd_toStartOf="@id/link_forgotpass"
            />

        <TextView
            android:id="@+id/link_signup"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Sign Up"
            android:textAlignment="center"

            android:textColor="@color/dark_blue"
            android:textSize="16sp"

            app:layout_constraintTop_toTopOf="@id/text_signup"
            app:layout_constraintBottom_toBottomOf="@id/text_signup"
            app:layout_constraintStart_toEndOf="@id/text_signup"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>