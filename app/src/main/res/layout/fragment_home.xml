<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_white"
    tools:context=".presentation.ui.home.HomeFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?attr/colorPrimary"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/guideline_center_cardview"/>

        <TextView
            android:id="@+id/text_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_welcome"
            android:textSize="16sp"
            android:textColor="@color/white"

            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/cardview_one" />

        <TextView
            android:id="@+id/tv_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muhammad Nama"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"

            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_first"
            app:layout_constraintStart_toStartOf="@id/cardview_one"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"

            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_fullname">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="16dp">

                <ImageView
                    android:id="@+id/ic_takeoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_takeoff"
                    app:tint="@color/gray"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Location"
                    android:textSize="16sp"
                    android:textColor="@color/text_blue"

                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/ic_takeoff"
                    app:layout_constraintTop_toTopOf="@id/ic_takeoff"
                    app:layout_constraintBottom_toBottomOf="@id/ic_takeoff"/>

                <View
                    android:id="@+id/guideline_one"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"

                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/ic_takeoff"
                    app:layout_constraintStart_toStartOf="@id/ic_takeoff"/>

                <ImageView
                    android:id="@+id/ic_land"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_land"
                    app:tint="@color/gray"

                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_one"
                    app:layout_constraintTop_toBottomOf="@id/guideline_one"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Where we fly today?"
                    android:textSize="16sp"
                    android:textColor="@color/text_blue"

                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/ic_land"
                    app:layout_constraintTop_toTopOf="@id/ic_land"
                    app:layout_constraintBottom_toBottomOf="@id/ic_land"/>

                <ImageButton
                    android:id="@+id/btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/background_blue"
                    android:src="@drawable/ic_search"
                    app:tint="@color/text_blue"

                    android:padding="3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/guideline_center_cardview"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="@id/cardview_one"
            app:layout_constraintEnd_toEndOf="@id/cardview_one"
            app:layout_constraintTop_toTopOf="@id/cardview_one"
            app:layout_constraintBottom_toBottomOf="@id/cardview_one"/>

        <TextView
            android:id="@+id/text_favdestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favorite Destination"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_blue"

            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/cardview_one"
            app:layout_constraintStart_toStartOf="@id/cardview_one"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_viewall"
            android:textColor="@color/dark_blue"

            app:layout_constraintTop_toTopOf="@id/text_favdestination"
            app:layout_constraintBottom_toBottomOf="@id/text_favdestination"
            app:layout_constraintEnd_toEndOf="@id/cardview_one"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_favdestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_favorite_destination"
            tools:itemCount="3"

            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_favdestination"/>

        <TextView
            android:id="@+id/text_newdestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New This Year"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_blue"

            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/rv_favdestination"
            app:layout_constraintStart_toStartOf="@id/cardview_one"/>

        <TextView
            android:id="@+id/viewall_newdestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_viewall"
            android:textColor="@color/dark_blue"

            app:layout_constraintTop_toTopOf="@id/text_newdestination"
            app:layout_constraintBottom_toBottomOf="@id/text_newdestination"
            app:layout_constraintEnd_toEndOf="@id/cardview_one"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_newdestination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_new_destination"
            tools:itemCount="3"

            android:layout_marginTop="18dp"
            app:layout_constraintEnd_toEndOf="@id/viewall_newdestination"
            app:layout_constraintStart_toStartOf="@id/text_newdestination"
            app:layout_constraintTop_toBottomOf="@id/text_newdestination" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>