<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"
    android:background="@color/background_white"
    tools:context=".presentation.ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="?attr/colorPrimary"
            app:layout_constraintBottom_toTopOf="@+id/guideline_center_cardview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/text_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_welcome"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/cardview_one" />

        <TextView
            android:id="@+id/tv_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_fullname"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_first"
            app:layout_constraintStart_toStartOf="@id/cardview_one" />

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_person_circle"
            app:tint="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/cardview_one"
            app:layout_constraintTop_toTopOf="@+id/text_first" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_fullname">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ic_takeoff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_takeoff"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_location"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/ic_takeoff"
                    app:layout_constraintTop_toTopOf="@id/ic_takeoff"
                    app:layout_constraintBottom_toBottomOf="@id/ic_takeoff"/>

                <View
                    android:id="@+id/guideline_one"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ic_takeoff" />

                <ImageView
                    android:id="@+id/ic_land"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_land"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@id/guideline_one"
                    app:layout_constraintTop_toBottomOf="@id/guideline_one"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/text_fly"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/ic_land"
                    app:layout_constraintStart_toEndOf="@id/ic_land"
                    app:layout_constraintTop_toTopOf="@id/ic_land" />

                <ImageView
                    android:id="@+id/btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_icon"
                    android:padding="6dp"
                    android:src="@drawable/ic_search"
                    app:layout_constraintBottom_toBottomOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView"
                    app:tint="@color/text_blue" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <View
            android:id="@+id/guideline_center_cardview"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="@id/cardview_one"
            app:layout_constraintEnd_toEndOf="@id/cardview_one"
            app:layout_constraintTop_toTopOf="@id/cardview_one"
            app:layout_constraintBottom_toBottomOf="@id/cardview_one"/>

        <TextView
            android:id="@+id/text_favdestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_favorite"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardview_one"
            app:layout_constraintStart_toStartOf="@id/cardview_one"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_viewall"
            android:textColor="@color/dark_blue"

            app:layout_constraintTop_toTopOf="@id/text_favdestination"
            app:layout_constraintBottom_toBottomOf="@id/text_favdestination"
            app:layout_constraintEnd_toEndOf="@id/cardview_one"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_favdestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/text_favdestination"
            tools:itemCount="3"
            tools:listitem="@layout/item_favorite_destination" />

        <TextView
            android:id="@+id/text_newdestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_new"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/rv_favdestination"
            app:layout_constraintStart_toStartOf="@id/cardview_one"/>

        <TextView
            android:id="@+id/viewall_newdestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_viewall"
            android:textColor="@color/dark_blue"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/text_newdestination"
            app:layout_constraintBottom_toBottomOf="@id/text_newdestination"
            app:layout_constraintEnd_toEndOf="@id/cardview_one"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_newdestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/text_newdestination"
            tools:itemCount="3"
            tools:listitem="@layout/item_new_destination" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>