<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SmallSp, ContentDescription"
    style="@style/Widget.Custom.CardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="4dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="-16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/item_iv_destination_image"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/dummy_destination_image"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/item_tv_destination_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_destination"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_iv_destination_image"/>

        <TextView
            android:id="@+id/item_tv_destination_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City, Country"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/item_tv_destination_name"
            app:layout_constraintStart_toStartOf="@id/item_tv_destination_name" />

        <TextView
            android:id="@+id/item_tv_destination_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="One Way"
            android:textSize="10sp"
            android:textColor="@color/gray"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="@id/item_tv_destination_name"
            app:layout_constraintTop_toBottomOf="@id/item_tv_destination_location"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/text_price"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/item_tv_destination_name"
            app:layout_constraintTop_toBottomOf="@id/item_tv_destination_information" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>