<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:layout_marginBottom="18dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/ic_airplane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_airplane"
            app:tint="@color/gray"

            android:layout_marginTop="18dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_fromlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balikpapan (BPP)"
            android:textColor="@color/text_blue"
            android:textSize="12sp"

            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/ic_airplane"
            app:layout_constraintTop_toTopOf="@id/ic_airplane"
            app:layout_constraintBottom_toBottomOf="@id/ic_airplane"/>

        <TextView
            android:id="@+id/tv_destinationlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jakarta (JKT)"
            android:textColor="@color/text_blue"
            android:textSize="12sp"

            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/ic_change_arrow"
            app:layout_constraintTop_toTopOf="@id/ic_airplane"
            app:layout_constraintBottom_toBottomOf="@id/ic_airplane"/>

        <ImageView
            android:id="@+id/ic_change_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_change_arrow"

            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/tv_fromlocation"
            app:layout_constraintTop_toTopOf="@id/tv_fromlocation"
            app:layout_constraintBottom_toBottomOf="@id/tv_fromlocation"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward"
            android:background="@color/transparant_color"
            app:tint="?attr/colorPrimary"

            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/ic_airplane"
            app:layout_constraintBottom_toBottomOf="@id/cardview_transactionsuccesfull"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_transactionsuccesfull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/background_green"
            app:cardCornerRadius="24dp"

            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/ic_airplane"
            app:layout_constraintStart_toStartOf="@id/ic_airplane">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Successfull"
                android:textSize="12sp"
                android:textColor="@color/text_green"

                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>


        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>