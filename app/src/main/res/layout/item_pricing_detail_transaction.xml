<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="ContentDescription"
    style="@style/Widget.Custom.CardView"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ic_airplane"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_airplane"
            app:tint="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_fromlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_departure"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/ic_airplane"
            app:layout_constraintTop_toTopOf="@id/ic_airplane"
            app:layout_constraintBottom_toBottomOf="@id/ic_airplane"/>

        <TextView
            android:id="@+id/tv_destinationlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/text_arrival"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_fromlocation"
            app:layout_constraintStart_toEndOf="@id/ic_change_arrow"
            app:layout_constraintTop_toTopOf="@+id/tv_fromlocation" />

        <ImageView
            android:id="@+id/ic_change_arrow"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/ic_arrow_destination"
            app:tint="@color/text_blue"
            app:layout_constraintBottom_toBottomOf="@+id/ic_airplane"
            app:layout_constraintStart_toEndOf="@id/tv_fromlocation"
            app:layout_constraintTop_toTopOf="@+id/ic_airplane" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/transparant_color"
            android:src="@drawable/ic_arrow_forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/dark_blue" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_transactionsuccesfull"
            style="@style/Widget.Custom.CardView.Transaction.Success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/ic_airplane"
            app:layout_constraintStart_toStartOf="@id/ic_airplane">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_ticket_issued"
                android:textColor="@color/text_green" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>