<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    tools:ignore="ContentDescription, SmallSp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@color/transparant_color"
            android:src="@drawable/ic_back_arrow"
            android:layout_marginStart="24dp"
            android:layout_marginVertical="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_fromlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_departure"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="@id/btn_back" />

        <TextView
            android:id="@+id/tv_destinationlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/text_arrival"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_fromlocation"
            app:layout_constraintStart_toEndOf="@id/ic_arrow_destination"
            app:layout_constraintTop_toTopOf="@+id/tv_fromlocation" />

        <TextView
            android:id="@+id/tv_ordernumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_ordernumber"
            android:textColor="@color/white"
            android:textSize="8sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_back"
            app:layout_constraintStart_toStartOf="@id/tv_fromlocation"
            app:layout_constraintTop_toBottomOf="@id/tv_fromlocation" />

        <ImageView
            android:id="@+id/ic_arrow_destination"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_arrow_destination"
            app:tint="@color/white"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@id/tv_fromlocation"
            app:layout_constraintTop_toTopOf="@id/tv_fromlocation"
            app:layout_constraintBottom_toBottomOf="@id/tv_fromlocation"/>

        <TextView
            android:id="@+id/text_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_ticket"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="@+id/btn_back"
            app:layout_constraintTop_toBottomOf="@+id/view_header" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_ticket"
            style="@style/Widget.Custom.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/text_ticket">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/text_pnr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_pnr"
                    android:textSize="12sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/text_ticket_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_ticket_code"
                    android:textSize="16sp"
                    android:textColor="@color/dark_blue"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/text_pnr"
                    app:layout_constraintStart_toStartOf="@id/text_pnr"/>

                <ImageView
                    android:id="@+id/iv_content_copy"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_content_copy"
                    app:tint="@color/dark_blue"
                    android:padding="2dp"
                    android:rotation="180"
                    app:layout_constraintBottom_toBottomOf="@+id/text_ticket_code"
                    app:layout_constraintStart_toEndOf="@+id/text_ticket_code"
                    app:layout_constraintTop_toTopOf="@+id/text_ticket_code" />

                <View
                    android:id="@+id/guideline_one"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/border_white"
                    app:layout_constraintTop_toBottomOf="@+id/text_ticket_code" />

                <ImageView
                    android:id="@+id/ic_logo"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_logo"
                    app:layout_constraintStart_toStartOf="@+id/text_pnr"
                    app:layout_constraintTop_toBottomOf="@+id/guideline_one"
                    app:tint="@color/main_blue" />

                <TextView
                    android:id="@+id/tv_plane"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    app:layout_constraintStart_toEndOf="@+id/ic_logo"
                    app:layout_constraintTop_toTopOf="@+id/ic_logo" />

                <TextView
                    android:id="@+id/tv_plane_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_ticket_code"
                    android:layout_marginStart="2dp"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@+id/tv_plane"
                    app:layout_constraintTop_toTopOf="@+id/ic_logo" />

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_category_seat"
                    android:textColor="@color/gray"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/ic_logo"
                    app:layout_constraintStart_toStartOf="@+id/tv_plane" />

                <View
                    android:id="@+id/guideline_two"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/border_white"
                    app:layout_constraintTop_toBottomOf="@+id/ic_logo" />

                <TextView
                    android:id="@+id/text_time_departure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/text_time"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/text_pnr"
                    app:layout_constraintTop_toBottomOf="@+id/guideline_two" />

                <TextView
                    android:id="@+id/text_date_departure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_date"
                    android:layout_marginTop="2dp"
                    android:textSize="10sp"
                    android:textColor="@color/gray"
                    app:layout_constraintStart_toStartOf="@+id/text_pnr"
                    app:layout_constraintTop_toBottomOf="@+id/text_time_departure" />

                <TextView
                    android:id="@+id/text_airport_departure"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/text_departure"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/text_time_departure"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_circle_dot_1"
                    app:layout_constraintTop_toTopOf="@+id/text_time_departure" />

                <TextView
                    android:id="@+id/text_airport_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/text_departure"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/text_airport_departure"
                    app:layout_constraintStart_toStartOf="@+id/text_airport_departure"
                    app:layout_constraintTop_toBottomOf="@+id/text_airport_departure" />

                <ImageView
                    android:id="@+id/iv_circle_dot_1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="16dp"
                    android:translationZ="2dp"
                    android:src="@drawable/ic_outline_circle"
                    app:layout_constraintBottom_toBottomOf="@+id/text_time_departure"
                    app:layout_constraintStart_toEndOf="@+id/text_date_departure"
                    app:layout_constraintTop_toTopOf="@+id/text_time_departure"
                    app:tint="@color/main_blue" />

                <View
                    android:id="@+id/guideline_three"
                    android:layout_width="2dp"
                    android:layout_height="102dp"
                    android:background="@color/background_gray"
                    android:layout_marginTop="-1dp"
                    app:layout_constraintEnd_toEndOf="@+id/iv_circle_dot_1"
                    app:layout_constraintStart_toStartOf="@+id/iv_circle_dot_1"
                    app:layout_constraintTop_toBottomOf="@+id/iv_circle_dot_1" />

                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_duration"
                    android:textColor="@color/gray"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/text_time_arrival"
                    app:layout_constraintStart_toStartOf="@+id/text_pnr"
                    app:layout_constraintTop_toBottomOf="@+id/text_date_departure" />

                <ImageView
                    android:id="@+id/iv_circle_dot_2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="-1dp"
                    android:translationZ="2dp"
                    android:src="@drawable/ic_circle"
                    app:layout_constraintEnd_toEndOf="@+id/iv_circle_dot_1"
                    app:layout_constraintStart_toStartOf="@+id/iv_circle_dot_1"
                    app:layout_constraintTop_toBottomOf="@+id/guideline_three"
                    app:tint="@color/main_blue" />

                <TextView
                    android:id="@+id/text_time_arrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_time"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_circle_dot_2"
                    app:layout_constraintStart_toStartOf="@+id/text_pnr"
                    app:layout_constraintTop_toTopOf="@+id/iv_circle_dot_2" />

                <TextView
                    android:id="@+id/text_date_arrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_date"
                    android:layout_marginTop="2dp"
                    android:textSize="10sp"
                    android:textColor="@color/gray"
                    app:layout_constraintStart_toStartOf="@+id/text_pnr"
                    app:layout_constraintTop_toBottomOf="@+id/text_time_arrival" />

                <TextView
                    android:id="@+id/text_airport_arrival"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/text_arrival"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_circle_dot_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_circle_dot_2"
                    app:layout_constraintTop_toTopOf="@+id/iv_circle_dot_2" />

                <TextView
                    android:id="@+id/text_airport_arrival_detail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/text_arrival"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/text_airport_arrival"
                    app:layout_constraintStart_toStartOf="@+id/text_airport_arrival"
                    app:layout_constraintTop_toBottomOf="@+id/text_airport_arrival" />

                <View
                    android:id="@+id/guideline_four"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/border_white"
                    app:layout_constraintTop_toBottomOf="@+id/text_airport_arrival_detail" />

                <TextView
                    android:id="@+id/text_passenger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_passenger"
                    android:textSize="12sp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="@+id/text_pnr"
                    app:layout_constraintTop_toBottomOf="@+id/guideline_four" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_passenger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@+id/text_passenger"
                    tools:itemCount="2"
                    tools:listitem="@layout/item_ticket_passenger" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/gap"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/btn_back"
            app:layout_constraintTop_toBottomOf="@+id/cv_ticket" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>