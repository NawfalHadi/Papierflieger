<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ContentDescription"
    android:background="@color/background_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.auth.RegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <Button
            android:id="@+id/btn_back"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_back_arrow"
            app:iconSize="24dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="12dp"
            app:iconTint="@color/text_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_banner_signup"
            android:layout_marginStart="24dp"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginTop="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/text_fullname"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/text_first"
            app:layout_constraintTop_toBottomOf="@id/text_first" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_et_full_name"
            style="@style/Widget.Custom.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_full_name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/title_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/text_username"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/title_full_name"
            app:layout_constraintTop_toBottomOf="@id/til_et_full_name" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_et_username"
            style="@style/Widget.Custom.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/til_et_full_name"
            app:layout_constraintStart_toStartOf="@+id/til_et_full_name"
            app:layout_constraintTop_toBottomOf="@id/title_username">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/title_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/text_email"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/title_full_name"
            app:layout_constraintTop_toBottomOf="@id/til_et_username" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_et_email"
            style="@style/Widget.Custom.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/til_et_full_name"
            app:layout_constraintStart_toStartOf="@+id/til_et_full_name"
            app:layout_constraintTop_toBottomOf="@id/title_email">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/title_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/text_password"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/title_full_name"
            app:layout_constraintTop_toBottomOf="@id/til_et_email" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_et_password"
            style="@style/Widget.Custom.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/til_et_full_name"
            app:layout_constraintStart_toStartOf="@+id/til_et_full_name"
            app:layout_constraintTop_toBottomOf="@id/title_password"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/title_confirm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/text_confirm_password"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/title_full_name"
            app:layout_constraintTop_toBottomOf="@id/til_et_password" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_et_confirm_password"
            style="@style/Widget.Custom.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/til_et_full_name"
            app:layout_constraintStart_toStartOf="@+id/til_et_full_name"
            app:layout_constraintTop_toBottomOf="@id/title_confirm_password"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_signup"
            style="@style/Widget.Custom.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/text_signup"
            app:layout_constraintEnd_toEndOf="@+id/til_et_full_name"
            app:layout_constraintStart_toStartOf="@+id/til_et_full_name"
            app:layout_constraintTop_toBottomOf="@id/til_et_confirm_password" />

        <LinearLayout
            android:id="@+id/link_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_signup">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="@string/text_already"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/link_haveaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_signin"
                android:textColor="@color/dark_blue"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>