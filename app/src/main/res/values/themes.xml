<resources>
    <!-- Base application theme. -->
    <style name="Theme.Papierflieger" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="Widget.Custom.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Custom.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/dark_blue</item>
    </style>

    <style name="Widget.Custom.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="Widget.Custom.CardView.Transaction.Success" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_green</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingTop">4dp</item>
        <item name="contentPaddingBottom">4dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.Custom.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/background_input_field</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>