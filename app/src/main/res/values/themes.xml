<resources>
    <!-- Base application theme. -->
    <style name="Theme.Papierflieger" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="Theme.Papierflieger.ActionBar" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="Widget.Custom.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Custom.IconButton" parent="Widget.Material3.Button.IconButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="Widget.Custom.Button.Mini" parent="Widget.Custom.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Custom.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="backgroundTint">@color/background_white</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="strokeColor">@color/dark_blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Custom.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/dark_blue</item>
        <item name="endIconTint">@color/dark_blue</item>
    </style>

    <style name="Widget.Custom.TextInputLayout.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/dark_blue</item>
        <item name="endIconTint">#757575</item>
    </style>

    <style name="Widget.Custom.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="Widget.Custom.CardView.Background" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_gray</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingTop">2dp</item>
        <item name="contentPaddingBottom">2dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.Custom.CardView.Outline" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/background_gray</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingTop">4dp</item>
        <item name="contentPaddingBottom">4dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.Custom.CardView.Pay" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/dark_blue</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="contentPaddingRight">32dp</item>
        <item name="contentPaddingLeft">32dp</item>
        <item name="contentPaddingTop">6dp</item>
        <item name="contentPaddingBottom">6dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.Custom.CardView.Change" parent="Widget.Custom.CardView.Transaction.Success">
        <item name="cardBackgroundColor">@color/background_blue</item>
    </style>

    <style name="Widget.Custom.CardView.Transaction.Success" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background_green</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingTop">4dp</item>
        <item name="contentPaddingBottom">4dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.Custom.CardView.Transaction.Danger" parent="Widget.Custom.CardView.Transaction.Success">
        <item name="cardBackgroundColor">@color/background_red</item>
    </style>

    <style name="Widget.Custom.CardView.Transaction.Warning" parent="Widget.Custom.CardView.Transaction.Success">
        <item name="cardBackgroundColor">@color/background_yellow</item>
        <item name="contentPaddingTop">8dp</item>
        <item name="contentPaddingBottom">8dp</item>
    </style>

    <style name="Widget.Custom.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/background_input_field</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/white</item>
        <item name="android:background">@color/sidebar_blue</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="Widget.Custom.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@color/white</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:layout_marginBottom">-1dp</item>
    </style>

    <style name="Widget.Custom.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Surface">
        <item name="backgroundTint">@color/background_green</item>
        <item name="tint">@color/text_green</item>
        <item name="fabCustomSize">48dp</item>
        <item name="android:layout_margin">24dp</item>
    </style>

</resources>