<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.papierflieger.presentation.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.papierflieger.presentation.ui.home.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.papierflieger.presentation.ui.home.history.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/profileUserFragment"
        android:name="com.papierflieger.presentation.ui.home.profiles.ProfileUserFragment"
        android:label="ProfileUserFragment" >
        <action
            android:id="@+id/action_profileUserFragment_to_settingPage"
            app:destination="@id/settingPage" />
        <action
            android:id="@+id/action_profileUserFragment_to_authActivity"
            app:destination="@id/authActivity" />
    </fragment>
    <activity
        android:id="@+id/settingPage"
        android:name="com.papierflieger.presentation.ui.home.profiles.settings.SettingPage"
        android:label="activity_setting_page"
        tools:layout="@layout/activity_setting_page" />
    <activity
        android:id="@+id/authActivity"
        android:name="com.papierflieger.presentation.ui.auth.AuthActivity"
        android:label="activity_auth"
        tools:layout="@layout/activity_auth" />
</navigation>